<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="18dp"
    tools:context=".Activities.EstadoActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:id="@+id/img_estado">
        <include
            layout="@layout/view_display"/>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_estado">
        <Button
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Borrar"
            android:id="@+id/btn_borrar_estado"
            android:textSize="15sp"/>
        <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/btn_guardar_estado"
            android:text="Guardar estado"
            android:textSize="15sp"
            android:layout_toRightOf="@id/btn_borrar_estado"/>
    </RelativeLayout>


</RelativeLayout>